@model College_Management_System.Models.Student
@{
    ViewBag.Title = "AddStud";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>AddStud</h2>
<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("EditStud", "College", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <div>
                @ViewBag.msg
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Name" })

            </div>
            <hr />

            <div class="form-group">
                @Html.TextBoxFor(m => m.birthday, new { @class = "form-control", @placeholder = "Birthday" })

            </div>
            <hr />

            <div class="form-group">
                @Html.TextBoxFor(m => m.regist_no_, new { @class = "form-control", @placeholder = "Registration number" })

            </div>
            <hr />

            <div class="form-group">
                @Html.TextBoxFor(m => m.subject, new { @class = "form-control", @placeholder = "Subject" })

            </div>
            <hr />

            <div class="form-group">
                @Html.TextBoxFor(m => m.grade, new { @class = "form-control", @placeholder = "Grade" })

            </div>
            <hr />

            <div>

                <button type="submit" class="btn btn-primary btn-block btn-user">Add</button>
            </div>


        }
    </div>
</div>

